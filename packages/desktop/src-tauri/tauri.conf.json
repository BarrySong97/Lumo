{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Lumo",
  "version": "0.1.11",
  "identifier": "com.lumo.app",
  "build": {
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm -C ../../apps/web build && pnpm -C ../../apps/server build && node ./src-tauri/scripts/prepare-sidecar.mjs",
    "frontendDist": "../../../apps/web/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Lumo",
        "width": 402,
        "height": 800,
        "minWidth": 362,
        "minHeight": 582,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [],
    "externalBin": [
      "binaries/lumo-server"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFGMzcyQUM0QjQ4NjU0ODYKUldTR1ZJYTB4Q28zcjFnRVdscGhMa0ZMRC9nZ1ZITFcwRS9MWks3bkd5bERlVURMU1lQSVJGR24K",
      "endpoints": [
        "https://github.com/BarrySong97/journal_todo/releases/latest/download/latest.json"
      ]
    }
  }
}